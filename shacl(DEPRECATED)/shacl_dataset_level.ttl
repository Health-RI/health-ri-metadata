@prefix :         <http://fairdatapoint.org/> .
@prefix dash:     <http://datashapes.org/dash#> .
@prefix dcat:     <http://www.w3.org/ns/dcat#> .
@prefix dct:      <http://purl.org/dc/terms/> .
@prefix sh:       <http://www.w3.org/ns/shacl#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix hri:      <https://w3id.org/health-ri/> .

:DatasetShape a sh:NodeShape ;
  sh:targetClass hri:Dataset, dcat:Dataset ;
  sh:property [
    sh:path dct:title ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:order 0 ;
    dash:editor dash:TextFieldEditor ;
  ], [
    sh:path dct:description ;
    sh:nodeKind sh:Literal ;
    sh:maxCount 1 ;
    sh:order 1 ;
    dash:editor dash:TextAreaEditor ;
  ], [
    sh:path dct:creator ;
    sh:node :CreatorShape ;
    sh:minCount 1 ;
    dash:editor dash:BlankNodeEditor ;
  ], [
    sh:path dct:publisher ;
    sh:node :PublisherShape ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:BlankNodeEditor ;
  ], [
    sh:path hri:contributor ;
    sh:node :ContributorShape ;
    sh:minCount 1 ;
    dash:editor dash:BlankNodeEditor ;
  ], [
    sh:path dct:issued ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    dash:editor dash:DatePickerEditor ;
    dash:viewer dash:LiteralViewer ;
  ], [
    sh:path dct:modified ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    dash:editor dash:DatePickerEditor ;
    dash:viewer dash:LiteralViewer ;
  ],  [
    sh:path dct:hasVersion ;
    sh:name "version" ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
  ], [
    sh:path dct:language ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path dcat:landingPage ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [
    sh:path dct:license ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [    
    sh:path dcat:keyword ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
  ], [
    sh:path dcat:theme ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [    
    sh:path dct:rights ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], [    
    sh:path dct:accessRights ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ] .

:CreatorShape a sh:NodeShape ;
  sh:targetClass foaf:Agent ;
  sh:property [
    sh:path dct:identifier;
    sh:name "ORCID" ;
    sh:description "Provide the ORCID URL" ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ].

:PublisherShape a sh:NodeShape ;
  sh:targetClass foaf:Agent ;
  sh:property [
    sh:path dct:identifier;
    sh:name "ORCID" ;
    sh:description "Provide the ORCID URL" ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ].    
  
  :ContributorShape a sh:NodeShape ;
  sh:targetClass foaf:Agent ;
  sh:property [
    sh:path dct:identifier;
    sh:name "ORCID" ;
    sh:description "Provide the ORCID URL" ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ].
  
  :ContactPointShape a sh:NodeShape ;
  sh:targetClass foaf:Agent ;
  sh:property [
    sh:path foaf:name;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:identifier;
    sh:name "ORCID" ;
    sh:description "Provide the ORCID URL" ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ].
